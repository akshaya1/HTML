      border: none;
      border-radius: 5px;
      cursor: pointer;
      background-color: #3498db;
      color: white;
      transition: background-color 0.3s;
    }

    /* Active state */
    button:active {
      background-color: #2980b9;
      transform: scale(0.95);
    }

    /* Disabled state */
    button:disabled {
      background-color: #bdc3c7;
      cursor: not-allowed;
      color: #7f8c8d;
    }
