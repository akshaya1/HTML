    .box {
      width: 150px;
      height: 150px;
      background-color: #3498db;
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: bold;
      transition: opacity 0.5s;
    }

    /* Normal opacity */
    .box1 { opacity: 1; }

    /* Semi-transparent */
    .box2 { opacity: 0.6; }

    /* Hover effect with opacity */
    .box:hover { opacity: 0.3; }
